<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= raw t('errors.template.header', count: @question.errors.count, model: t('activerecord.models.order')) %></h2>
      <p><%= t('errors.template.body') %></p>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= raw message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, t('.title') %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :content, t('.content') %>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.label :tag_list, t('.tags') %>
    <%= f.text_area :tag_list %>
  </div>

  <div>
    <%= f.submit 'Dodaj pytanie' %>
  </div>
<% end %>